{
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:8081",
      "https://localhost:8081",
      "https://localhost:5000",
      "http://localhost:4200",
      "https://localhost:4200",
      "http://localhost:3000",
      "https://localhost:3000"
    ]
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Enrichers.Environment",
      "Serilog.Enrichers.Thread"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "ComercialApp.Application": "Information",
        "ComercialApp.Persistence": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "restrictedToMinimumLevel": "Information",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "buffered": false,
          "shared": true,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}",
          "restrictedToMinimumLevel": "Information"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ],
    "Properties": {
      "Application": "ComercialApp.API"
    }
  },
  "ConnectionStrings": {
    "AzurePostgresVMConnection_Conexion a Postgres Maq Virtual": "Host=128.24.31.22;Port=5432;Database=comercial;Username=postgres;Password=vmpostgres",
    "DefaultConnection_local": "Host=localhost;Port=5433;Database=comercial;Username=postgres;Password=postgres",
    "DefaultConnection": "Host=localhost;Port=5432;Database=mydatabase;Username=myuser;Password=mypassword",
    "DBLocalConexion_claridad": "Host=localhost;Port=5433;Database=claridad_dev;Username=postgres;Password=postgres"
  },
  "Redis": {
    "RedisConnection": "localhost:6379,abortConnect=false,password=Peru2412",
    "AbortOnConnectFail": false,
    "ConnectRetry": 3,
    "ConnectTimeout": 15000,
    "SyncTimeout": 5000,
    "KeepAlive": 180,
    "HealthCheckTimeoutSeconds": 3,
    "InstanceName": "ComercialApp:"
  },
  "RabbitMQ": {
    "ConnectionString": "amqp://guest:guest@localhost:5672/"
  },

  "HealthChecksUI": {
    "HealthChecks": [
      {
        "Name": "ComercialApp - Readiness (K8s)",
        "Uri": "http://localhost:5000/health/ready"
      },
      {
        "Name": "ComercialApp - Liveness (K8s)",
        "Uri": "http://localhost:5000/health/live"
      }
    ],
    "EvaluationTimeOnSeconds": 10,
    "MinimumSecondsBetweenFailureNotifications": 60
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.EntityFrameworkCore": "Information", // ¡Subir el nivel aquí!
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "HealthChecks": {
    "Enable": true,
    "Endpoints": {
      "Redis": "/health"
    }
  },
  "AllowedHosts": "*"
}